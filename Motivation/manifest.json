// manifest.json
{
  "manifest_version": 3,
  "name": "Daily Motivation",
  "version": "1.0",
  "description": "Get inspired with motivational quotes throughout your day",
  "permissions": ["alarms"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
